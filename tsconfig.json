{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "api",
    "paths": {
      "@/*": ["api/*"]
    },
    "typeRoots": ["types", "node_modules/@types"],
    "resolveJsonModule": true
  }
}
